{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
		"devdojo/chatter": "0.2.*",
        "ammadeuss/laravel-html-dom-parser": "^1.0",
        "fabpot/goutte": "^3.2",
        "guzzlehttp/guzzle": "^6.0",
        "laravel/framework": "5.4.*",
        "laravel/tinker": "~1.0",
        "nao-pon/flysystem-google-drive": "^1.1",
        "symfony/browser-kit": "~2.1|~3.0|~4.0",
        "symfony/css-selector": "~2.1|~3.0|~4.0",
        "symfony/dom-crawler": "~2.1|~3.0|~4.0",
		"league/flysystem": "~1.0",
        "google/apiclient": "^2.0",
        "nao-pon/flysystem-cached-extra": "~1.0"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7",
		"symfony/phpunit-bridge": "^3.3 || ^4"

    },
    "autoload": {
		"files": [
            "app/codeforces.php",
			"app/simple_html_dom.php"
        ],
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/",
			"Goutte\\": "Goutte",
			"Hypweb\\Flysystem\\GoogleDrive\\": "src/"
        },
		"exclude-from-classmap": ["Goutte/Tests"]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
		"bin-dir": "bin"
    }
}
